{
    "name": "tsdeck_front",
    "private": true,
    "version": "0.0.1",
    "type": "module",
    "description": "Your One Piece Card Game Companion",
    "author": "ShockieToky and Yohan-Frmt",
    "keywords": [
        "One Piece",
        "Cardgame",
        "Companion",
        "DeckBuilder"
    ],
    "license": "MIT",
    "scripts": {
        "dev": "vite",
        "build": "tsc -b && vite build",
        "build:analyze": "npm run build && npx vite-bundle-analyzer dist",
        "preview": "vite preview",
        "clean": "rimraf dist coverage .tsbuildinfo node_modules/.vite",
        "lint": "eslint \"src/**/*.{ts,tsx}\" \"test/**/*.{ts,tsx}\"",
        "lint:fix": "eslint --fix \"src/**/*.{ts,tsx}\" \"test/**/*.{ts,tsx}\"",
        "lint:staged": "lint-staged",
        "format": "prettier --write \"src/**/*.{ts,tsx,json,css,md}\" \"test/**/*.{ts,tsx}\" \"*.{json,md}\"",
        "format:check": "prettier --check \"src/**/*.{ts,tsx,json,css,md}\" \"test/**/*.{ts,tsx}\" \"*.{json,md}\"",
        "type-check": "tsc --noEmit",
        "type-check:watch": "tsc --noEmit --watch",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:run": "vitest run",
        "test:coverage": "vitest run --coverage",
        "test:watch": "vitest --watch",
        "check:all": "npm run type-check && npm run lint && npm run format:check && npm run test:run",
        "fix:all": "npm run lint:fix && npm run format",
        "prepare": "husky",
        "size": "size-limit",
        "size:analyze": "size-limit --why"
    },
    "dependencies": {
        "react": "^19.1.1",
        "react-dom": "^19.1.1"
    },
    "devDependencies": {
        "@eslint-react/eslint-plugin": "^1.52.3",
        "@eslint/js": "^9.32.0",
        "@size-limit/preset-app": "^11.2.0",
        "@stylistic/eslint-plugin": "^5.2.2",
        "@testing-library/jest-dom": "^6.6.4",
        "@testing-library/react": "^16.3.0",
        "@testing-library/user-event": "^14.6.1",
        "@types/react": "^19.1.9",
        "@types/react-dom": "^19.1.7",
        "@unocss/eslint-plugin": "^66.4.1",
        "@vitejs/plugin-react": "^4.7.0",
        "@vitest/coverage-v8": "^3.2.4",
        "@vitest/ui": "^3.2.4",
        "eslint": "^9.32.0",
        "eslint-config-love": "^120.0.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-import-resolver-typescript": "^4.3.4",
        "eslint-plugin-format": "^1.0.1",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-prettier": "^5.5.4",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.20",
        "eslint-plugin-sonarjs": "^3.0.2",
        "eslint-plugin-unicorn": "^59.0.1",
        "husky": "^9.1.7",
        "jsdom": "^26.1.0",
        "lint-staged": "^16.1.4",
        "prettier": "^3.5.3",
        "rimraf": "^6.0.1",
        "size-limit": "^11.2.0",
        "typescript": "~5.8.3",
        "typescript-eslint": "^8.39.0",
        "vite": "^7.1.0",
        "vite-bundle-analyzer": "^1.2.0",
        "vitest": "^3.2.4"
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{json,css,md}": [
            "prettier --write"
        ]
    },
    "size-limit": [
        {
            "name": "Main Bundle",
            "path": "dist/assets/index-*.js",
            "limit": "800 KB",
            "gzip": true
        },
        {
            "name": "CSS Bundle",
            "path": "dist/assets/index-*.css",
            "limit": "50 KB",
            "gzip": true
        }
    ]
}
